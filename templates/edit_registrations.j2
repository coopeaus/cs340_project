{% extends "base_template.j2" %}

<title>{% block title %} Edit Registration {% endblock title %}</title>

{% block show_table %}
{% endblock show_table %}

{% block show_forms %}

    <div class="container">
        <h2>Update Registrations</h2>
        <form action="/edit_Registrations/{{ records['student_id'] }}&{{ records['class_id'] }}" method="post" class="form-row align-items-center">
            {{ update_form.csrf_token }}
            <div class="form-group col-auto">
                {{ update_form.student_id.label(class="form-label") }}
                {{ update_form.student_id(class="form-control") }}
            </div>
            <div class="form-group col-auto">
                {{ update_form.class_id.label(class="form-label") }}
                {{ update_form.class_id(class="form-control") }}
            </div>
            <div class="form-group col-auto pt-4">
                {{ update_form.submit(class="btn btn-primary") }}
            </div>
        </div>
    </div>

{% endblock show_forms %}
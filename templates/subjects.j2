{% extends "base_template.j2" %}

<title>{% block title %} Subjects {% endblock title %}</title>

{% block show_forms %}

    <div class="container">
        <h2>Add Subject</h2>
        <form action="/subjects" method="post" class="form-row align-items-center">
            {{ new_sub.csrf_token }}
            <div class="form-group col-auto">
                {{ new_sub.subject_name.label(class="form-label") }}
                {{ new_sub.subject_name(class="form-control") }}
            </div>
            <div class="form-group col-auto">
                {{ new_sub.core_elective.label(class="form-label") }}
                {{ new_sub.core_elective(class="form-control") }}
            </div>
            <div class="form-group col-auto pt-4">
                {{ new_sub.submit(class="btn btn-primary") }}
            </div>
        </div>
    </div>

{% endblock show_forms %}
